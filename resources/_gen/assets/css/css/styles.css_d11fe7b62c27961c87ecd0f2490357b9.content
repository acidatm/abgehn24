@font-face{font-family:elektron;font-weight:700;src:url(/fonts/Elektron.ttf) format("truetype")}html{background:#000}body{padding:0;margin:0;font-size:3vh;line-height:1.2em;background:#000;color:#fff;font-family:elektron,monospace;font-weight:400;text-transform:uppercase;cursor:crosshair;width:100%}#canvas{position:fixed;top:0;left:0;width:100vw;height:100vh}.container{position:fixed;top:0;left:0;height:100%;overflow:hidden;overflow-y:auto;padding:0 1em;width:calc(100% - 2em)}.menu li{display:block;margin-bottom:1em}.menu li a{background:#000}main{margin:0 auto;margin-top:37vh;padding-bottom:37vh;width:100%;max-width:480px}ul{list-style:none;margin:0;padding:0}li{margin:0;padding:0;display:inline-block}a{color:#fff;text-decoration:none;cursor:pointer}time,p,span,strong,h1,h2,h3,h4,h5,h6{background:#000}h1,h2,h3,h4,h5,h6{font-size:1em;color:#fff;display:inline-block;margin:0;padding:0;font-weight:400}p{line-height:1em;margin:0;margin-bottom:1em;padding:0;display:inline-block}::selection,::-moz-selection{background:#fff;color:#0f0f0f}.index-item{margin-bottom:1em;display:block}.index-item-time{width:2.5ch;word-break:break-all;user-select:none;display:inline-block;height:2em;line-height:1em;vertical-align:text-top}.index-item-title{padding:1em 0;height:2em;margin:0;padding:0;display:inline-block;color:#fff;vertical-align:top;width:calc(calc(100% - 2.5ch) - 1em);overflow:hidden}.index-item-title h2,.index-item-title p{width:100%;height:1em;overflow:hidden}.index-item-text{display:inline-block;background:#000}.visual{cursor:none}#logo{height:2rem;width:2rem;margin-top:.1rem}