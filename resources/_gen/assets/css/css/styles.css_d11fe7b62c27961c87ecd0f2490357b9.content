@font-face{font-family:work sans;font-weight:400;font-display:optional;src:url(/fonts/WorkSans-Regular.ttf) format("truetype")}body{padding:0;margin:0;font-size:5vh;line-height:1em;background:#0f0f0f;color:#fff;font-family:work sans,sans-serif;font-weight:400;text-transform:uppercase;cursor:crosshair;width:100%}#canvas{position:fixed;top:0;left:0;width:100%;height:100%}ul{list-style:none;margin:0;padding:0}li{margin:0;padding:0;display:inline-block}a{color:#fff;text-decoration:none;cursor:pointer}h1,h2,h3,h4,h5,h6{font-size:1em;color:#fff;display:inline-block;margin:0;padding:0;font-weight:400}p{line-height:1.5em;margin:0;margin-bottom:1em;padding:0}::selection,::-moz-selection{background:#fff;color:#0f0f0f}.container{width:100%;height:calc(100vh - 6em);position:fixed;top:3em;left:0;z-index:2;overflow:hidden;overflow-y:auto;scroll-behavior:smooth}nav,footer{position:fixed;top:0;left:0;width:calc(100% - 2em);height:1em;padding:1em;border-bottom:2px solid #fff;z-index:3;transition:opacity .2s ease-in-out}footer{top:auto;bottom:0;border-bottom:none;border-top:2px solid #fff}nav ul,footer ul{display:flex;justify-content:space-between;width:100%}main{line-height:1.4em;position:relative;z-index:2}main li{transition:opacity .2s ease-in-out}.index-item{display:flex;border-bottom:2px solid #fff;padding-bottom:1em;padding-top:1em}.index-item:last-of-type{border-bottom:0}.index-item-title{padding:0}.index-item h2{margin:0;padding:0;display:inline;color:#fff}.index-item-time{width:37%;user-select:none}.index-item-time{margin-left:1em}.index-item-text{width:calc(63% - 2em)}.links li,.links h1{padding:0 1em;line-height:1em;width:calc(100% - 2em);border-bottom:2px solid #fff;color:#fff;display:block}.links h1{padding:1em}.links a{color:#fff;line-height:1em}#toggleBackground{cursor:pointer}@media(max-width:1024px),(orientation:portrait){body{font-size:3vh}.links{font-size:5vh}.index-item-time.alt-on-mobile{display:none}.index-item-text.alt-on-mobile{padding:0 1em;width:calc(100% - 2em)}.container{top:6vh;height:calc(100% - 12vh)}nav,footer{font-size:2vh;line-height:1em}}